{% extends 'LabsBackBundle::admin.html.twig' %}
{% block title %}{{ 'Gestion des Dossiers | La financesengage.com ' }}{% endblock %}
{% block stylesheets %}
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <link href="{{ asset('adminLayout/assets/pages/css/profile-2.min.css') }}" rel="stylesheet" type="text/css" />
    <!-- END PAGE LEVEL PLUGINS -->
{% endblock %}
{% block body %}
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">
        <!-- BEGIN PAGE HEADER-->
        <h1 class="page-title"> {{'Gestion des fichiers'}}
            <small>{{ '| Liste des fichiers' }}</small>
        </h1>
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <i class="icon-home"></i>
                    <a href="{{ path('admin_homepage') }}">{{ 'Dashboard'|capitalize }}</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <a href="{{ path('list_dossier') }}">{{ 'fichiers'|capitalize }}</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <span>{{ 'liste'|capitalize }}</span>
                </li>
            </ul>
        </div>
        <!-- BEGIN PAGE LIST-->
        <div class="row">
            <div class="col-md-12">
                {% if app.session.flashBag.has('success') %}
                    <div class="alert alert-success" role="alert">
                        {% for msg in app.session.flashBag.get('success') %}
                            <strong> Succès </strong>{{ msg }}.
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
        <!-- END PAGE LIST-->
        <div class="profile">
            <div class="tabbable-line tabbable-full-width">
                <ul class="nav nav-tabs">
                    <li class="active">
                        <a href="#tab_1_1" data-toggle="tab"> {{ 'Vue d\'ensemble' }} </a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="tab_1_1">
                        <div class="row">
                            <div class="col-md-3">
                                <ul class="list-unstyled profile-nav">
                                    <li>
                                        <img src="{{ asset('global/images/logo/logo_final.png') }}" class="img-responsive pic-bordered" alt="la finance s'engage" />
                                    </li>
                                </ul>
                            </div>
                            <div class="col-md-9">
                                <div class="row">
                                    <div class="col-md-8 profile-info">
                                        <h1 class="font-yellow-gold sbold uppercase">{{ userfiles.firstname }} {{ userfiles.lastname }}</h1>
                                        <p>
                                            <a href="http://www.lafinancesengage.com" target="_blank"> www.lafinancesengage.com </a>
                                        </p>
                                        <ul class="list-inline">
                                            <li>
                                                <i class="fa fa-map-marker"></i> {{ 'Côte d\'ivoire' }} </li>
                                            <li>
                                                <i class="fa fa-calendar"></i> {{ userfiles.created|date('d M Y') }}
                                            </li>
                                            <li>
                                                <i class="fa fa-briefcase"></i> {{ userfiles.compagny }}
                                            </li>
                                        </ul>
                                    </div>
                                    <!--end col-md-8-->
                                    <div class="col-md-4">
                                        <div class="portlet sale-summary">
                                            <div class="portlet-title">
                                                <div class="caption font-red sbold"> {{ 'Dernière connexion'|capitalize }} </div>
                                            </div>
                                            <div class="portlet-body">
                                                <ul class="list-unstyled">
                                                    <li>
                                                        <span class="sale-info"> {{ 'Date'|upper }}
                                                            <i class="fa fa-img-up"></i>
                                                        </span>
                                                        <span class="sale-num"> {{ userfiles.lastLogin|date('d M Y') }} </span>
                                                    </li>
                                                    <li>
                                                        <span class="sale-info"> {{ 'fichiers'|upper }} </span>
                                                        <span class="sale-num"> {{ userfiles.documents|length }} </span>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <!--end col-md-4-->
                                </div>
                                <!--end row-->
                                <div class="tabbable-line tabbable-custom-profile">
                                    <ul class="nav nav-tabs">
                                        <li class="active">
                                            <a href="#tab_1_11" data-toggle="tab"> Liste des Fichiers </a>
                                        </li>
                                    </ul>
                                    <div class="tab-content">
                                        <div class="tab-pane active" id="tab_1_11">
                                            <div class="portlet-body">
                                                <table class="table table-striped table-bordered table-advance table-hover">
                                                    <thead>
                                                    <tr>
                                                        <th>
                                                            <i class="fa fa-briefcase"></i> {{'Nom du documents'}}
                                                        </th>
                                                        <th class="hidden-xs">
                                                            <i class="fa fa-calendar"></i> {{ 'Date d\'ajout' }}
                                                        </th>
                                                        <th> </th>
                                                    </tr>
                                                    </thead>
                                                    <tbody>
                                                    {% for document in userfiles.documents %}
                                                        <tr>
                                                            <td>
                                                                <a href="javascript:;"> {{ document.nameFile }} </a>
                                                            </td>
                                                            <td class="hidden-xs"> {{ document.created|date('d M Y') }} </td>
                                                            <td>
                                                                <a class="btn btn-sm yellow-gold btn-outline" href="{{ path('document_show', {'filename': document.path }) }}"> {{ 'Afficher' }} </a>
                                                            </td>
                                                        </tr>
                                                    {% endfor %}
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END PAGE HEADER-->
{% endblock %}
{% block extra %}
    {{ parent() }}
    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    <script src="{{ asset('adminLayout/assets/global/scripts/app.min.js') }}" type="text/javascript"></script>
    <!-- END PAGE LEVEL SCRIPTS -->
{% endblock %}
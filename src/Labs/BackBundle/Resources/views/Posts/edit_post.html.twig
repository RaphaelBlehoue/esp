{% extends 'LabsBackBundle::admin.html.twig' %}
{% block title %}{{ 'Gestion des Actualités | La financesengage.com ' }}{% endblock %}
{% block body %}
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">
        <!-- BEGIN PAGE HEADER-->
        <h1 class="page-title"> {{'Gestion des Actualités'}}
            <small>{{ '| Creation d\'article de Blog' }}</small>
        </h1>
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <i class="icon-home"></i>
                    <a href="{{ path('admin_homepage') }}">{{ 'Dashboard'|capitalize }}</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <a href="{{ path('post_list') }}">{{ 'Actualités'|capitalize }}</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <span>{{ 'Edition'|capitalize }} | {{ post.title|capitalize }}</span>
                </li>
            </ul>
        </div>
        <!-- BEGIN PAGE LIST-->
        <div class="row">
            <div class="col-md-12">
                {% if app.session.flashBag.has('success') %}
                    <div class="alert alert-success" role="alert">
                        {% for msg in app.session.flashBag.get('success') %}
                            <strong> Succès </strong>{{ msg }}.
                        {% endfor %}
                    </div>
                {% endif %}
                {% if app.session.flashBag.has('error') %}
                    <div class="alert alert-danger" role="alert">
                        {% for msg in app.session.flashBag.get('error') %}
                            <strong> Erreur d'ajout </strong>{{ msg }}.
                        {% endfor %}
                    </div>
                {% endif %}
                <!-- BEGIN EXAMPLE TABLE PORTLET-->
                <div class="portlet light ">
                    <div class="portlet-title">
                        <div class="caption font-dark">
                            <i class="icon-settings font-dark"></i>
                            <span class="caption-subject bold uppercase"> {{ 'Actualités' }}</span>
                        </div>
                        <div class="actions">
                            <a href="{{ path('post_list') }}" class="btn sbold uppercase btn-outline yellow-gold"><i class="fa fa-plus"></i> {{ 'afficher la liste'|upper }} </a>
                        </div>
                    </div>
                </div>
                <!-- END EXAMPLE TABLE PORTLET-->
                <!-- BEGIN SAMPLE FORM PORTLET-->
                <div class="portlet box yellow-gold">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-pencl"></i> {{'Modification d\'article'|capitalize}} | {{ post.title|capitalize }} </div>
                    </div>
                    <div class="portlet-body form">
                        {{ form_start(form, {'role': 'form', 'action': path('post_edit', { 'id': post.id}), 'attr': {'class': 'form-horizontal'}}) }}
                        {{ form_errors(form) }}
                        <div class="form-body">
                            <div class="form-group">
                                <label class="col-md-3 control-label">{{ 'Choix du status de l\'article' }}</label>
                                <div class="col-md-9">
                                    {{ form_row(form.status) }}
                                    {{ form_errors(form.status) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">{{ 'Titre de l\'article' }}</label>
                                <div class="col-md-9">
                                    {{ form_row(form.title) }}
                                    {{ form_errors(form.title) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">{{ 'Joindre une Photo' }}</label>
                                <div class="col-md-9">
                                    {{ form_row(form.imageFile) }}
                                    {{ form_errors(form.imageFile) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">{{ 'Nom du documents' }} <small>(Si disponible)</small></label>
                                <div class="col-md-9">
                                    {{ form_row(form.docsName) }}
                                    {{ form_errors(form.docsName) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">{{ 'Uploadez un documents' }} <small>(Si disponible)</small></label>
                                <div class="col-md-9">
                                    {{ form_row(form.documentFile) }}
                                    {{ form_errors(form.documentFile) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">{{ 'Identifiant de la video' }} <small>(Si disponible)</small></label>
                                <div class="col-md-9">
                                    {{ form_row(form.videoLink) }}
                                    {{ form_errors(form.videoLink) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">{{ 'Contenu de l\'article' }}</label>
                                <div class="col-md-9">
                                    {{ form_row(form.content) }}
                                    {{ form_errors(form.content) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-actions right1">
                            <button type="submit" class="btn yellow-gold">{{ 'Mofidifier l\'article' }}</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
                <!-- END SAMPLE FORM PORTLET-->
            </div>
        </div>
        <!-- END PAGE LIST-->


    </div>
    <!-- END PAGE HEADER-->
{% endblock %}

{% block javascripts %}{% endblock %}
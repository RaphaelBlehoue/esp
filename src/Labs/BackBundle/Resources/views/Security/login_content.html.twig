{% trans_default_domain 'FOSUserBundle' %}

<div class="account-pages"></div>
<div class="clearfix"></div>
<div class="wrapper-page">
    <div class=" card-box">
        <div class="panel-heading">
            <h3 class="text-center"> {{ 'Administration' }} <strong class="text-custom">{{ 'AGR' }}</strong> </h3>
        </div>


        <div class="panel-body">
                <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal m-t-20">

                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    {% endif %}

                    {% if error %}
                        <div class="alert alert-danger alert-styled-left alert-bordered">
                            <button type="button" class="close" data-dismiss="alert"><span>×</span><span class="sr-only">Close</span></button>
                            <span class="text-semibold"> Oops !</span> {{ error.messageKey|trans(error.messageData, 'security') }}.
                        </div>
                    {% endif %}

                <div class="form-group ">
                    <div class="col-xs-12">
                        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" placeholder="{{ 'security.login.username'|trans }}">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-12">
                        <input type="password" id="password" name="_password" required="required" class="form-control" placeholder="{{ 'security.login.password'|trans }}">
                    </div>
                </div>

                <div class="form-group text-center m-t-40">
                    <div class="col-xs-12">
                        <button type="submit" class="btn btn-success btn-block text-uppercase waves-effect waves-light">{{ 'connexion'|capitalize }}<i class="icon-circle-right2 position-right"></i></button>

                    </div>
                </div>

                <div class="form-group m-t-30 m-b-0">
                    <div class="col-sm-12">
                        <a href="page-recoverpw.html" class="text-dark"><i class="fa fa-lock m-r-5"></i>{{ 'Mot de passe oublié' }}</a>
                    </div>
                </div>
            </form>

        </div>
    </div>

</div>

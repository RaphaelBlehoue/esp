{% trans_default_domain 'FOSUserBundle' %}

<div class="row bs-reset">
    <div class="col-md-6 bs-reset mt-login-5-bsfix">
        <div class="login-bg" style="background-image:url('{{ asset('adminLayout/assets/pages/img/login/bg1.jpg')}}')">
            <img class="login-logo" src="{{ asset('global/images/logo/logo_final.png') }}" />
        </div>
    </div>
    <div class="col-md-6 login-container bs-reset mt-login-5-bsfix">
        <div class="login-content">
            <h1>{{ 'La Finance S\'engage | Connexion' }}</h1>
            <p>{{ 'Utiliser votre compte FSE pour accéder à vos informations sécurisé' }}</p>
            <form action="{{ path("fos_user_security_check") }}" class="login-form" method="post">

                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}
                {% if error %}
                    <div class="alert alert-danger">
                        <button class="close" data-close="alert"></button>
                        <span>{{ error.messageKey|trans(error.messageData, 'security') }} </span>
                    </div>
                {% endif %}

                <div class="row">
                    <div class="col-xs-6">
                        <input class="form-control form-control-solid placeholder-no-fix form-group" type="text" autocomplete="off" placeholder="Adresse Email" name="_username" value="{{ last_username }}" required/>
                    </div>
                    <div class="col-xs-6">
                        <input class="form-control form-control-solid placeholder-no-fix form-group" type="password" autocomplete="off" placeholder="Mot de passe" name="_password" required/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-6">
                        <h4><a href="{{ path('fos_user_registration_register') }}" style="color:#A6241C; text-decoration:none; font-weight: 500;">{{ 'Créer mon compte FSE' }}</a></h4>
                    </div>
                    <div class="col-xs-6">
                        <button type="submit" class="btn pull-right yellow-gold btn-outline sbold uppercase">{{ 'Se connecter' }}</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="login-footer">
            <div class="row bs-reset">
                <div class="col-xs-5 bs-reset">
                    <ul class="login-social">
                        <li>
                            <a href="javascript:;">
                                <i class="icon-social-facebook"></i>
                            </a>
                        </li>
                        <li>
                            <a href="javascript:;">
                                <i class="icon-social-youtube"></i>
                            </a>
                        </li>
                        <li>
                            <a href="javascript:;">
                                <i class="fa fa-google-plus"></i>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="col-xs-7 bs-reset">
                    <div class="login-copyright text-right">
                        <p>Copyright &copy; <a href="mailto:raphaelsampan@gmail.com">Raphael Blehoue</a> |Lafinancesengage.com {{ 'now'|date('Y') }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
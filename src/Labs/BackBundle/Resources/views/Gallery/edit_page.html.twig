{% extends 'LabsUboldBundle::loyout_ubold.html.twig' %}
{% block Title %}  {{ 'Gestion des Gallery - Edition'|capitalize }} {% endblock %}
{% block stylesheets %}

{% endblock %}
{% block body %}
    <!-- Main content -->
    <!-- Form horizontal -->
    <div class="panel panel-flat">
        <div class="panel-heading">
            <h5 class="panel-title">{{ 'Gestion des Dossiers - Edition' }}</h5>
            <div class="heading-elements">
                <div class="icons-list">
                    <a href="{{ path('dossier_index') }}" class="btn btn-primary btn-labeled"><b><i class="icon-menu7"></i></b> Afficher la liste</a>
                </div>
            </div>
        </div>
        <div class="panel-body">
            {{ form_start(form, { 'action': path('dossier_edit', {'id' : format.id , 'user_id': app.user.id}), attr : { 'class':'form-horizontal', 'novalidate': 'novalidate'}}) }}
            <fieldset class="content-group col-lg-12">

                <legend class="text-bold">Edition du dossiers - {% if format.name|length > 0 %}{{ format.name }}{% endif %}</legend>

                <div class="form-group">
                    <label class="control-label col-lg-3">Titre de la galerie</label>
                    <div class="col-lg-9">
                        {{ form_row(form.name) }}
                    </div>
                </div>


                <div class="form-group">
                    <label class="control-label col-lg-3">Status du dossier</label>
                    <div class="col-lg-3">
                        {{ form_row(form.online) }}
                    </div>
                </div>

                <!-- File limits -->
                <div class="panel panel-flat">
                    <div class="panel-heading">
                        <h5 class="panel-title">Inserez des fichiers dans le gestion de Media</h5>
                        <div class="heading-elements">
                            <ul class="icons-list">
                                <li><a data-action="collapse"></a></li>
                                <li><a data-action="reload"></a></li>
                                <li><a data-action="close"></a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="panel-body">
                        <p class="text-semibold">Importez les images ou photos du dossier</p>
                        <div action="{{ path('dossier_edit', {'id' : format.id, 'user_id': app.user.id }) }}" class="dropzone" id="dropzone-upload" data-name="Format"></div>
                    </div>
                </div>
                <!-- /file limits -->
                <div class="text-right">
                    <button type="submit" class="btn btn-primary">Enregistrer & Continuer <i class="icon-database-add position-right"></i></button>
                </div>

            </fieldset>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('global/js/uploaders/dropzone.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('global/js/dropzone/main.js') }}"></script>
{% endblock %}
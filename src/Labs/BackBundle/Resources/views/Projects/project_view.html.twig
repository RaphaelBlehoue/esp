{% extends 'LabsUboldBundle::loyout_ubold.html.twig' %}
{% block title %}{{ 'Project - Page | AGR' }}{% endblock %}
{% block body %}
    <div class="content">
        <div class="container">
            <!-- Page-Title -->
            <div class="row">
                <div class="col-sm-12">
                    {% if app.session.flashBag.has('success') %}
                        <div class="alert alert-success" role="alert">
                            {% for msg in app.session.flashBag.get('success') %}
                                <strong> Succ√®s </strong>{{ msg }}.
                            {% endfor %}
                        </div>
                    {% endif %}

                    <h4 class="page-title">{{  'Page project view' }}</h4>
                    <ol class="breadcrumb">
                        <li>
                            <a href="{{ path('homepage') }}">{{ 'AGR' }}</a>
                        </li>
                        <li class="active">
                            {{ 'Page About' }}
                        </li>
                    </ol>
                </div>
            </div>
            <!-- end Page Title -->
            <!-- page content -->
            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box">
                        <h4 class="m-t-0 header-title"><b>{{ 'Page view project' }}</b></h4>
                        <p class="text-muted font-13">
                            <span class="pull-left">view project</span>
                            <span class="pull-right"> <a href="{{ path('project_index') }}" class="btn btn-primary btn-block">{{ 'liste des projects' }}</a> </span>
                        </p>
                        <div class="clearfix"></div>

                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box m-t-20">
                                    <h4 class="m-t-0"><b>{{ projects.name }}</b></h4>

                                    <hr/>
                                        {{ projects.content|raw }}
                                    <hr/>

                                    <h4> <i class="fa fa-paperclip m-r-10 m-b-10"></i> Attachments <span>({{ projects.medias|length }})</span> </h4>

                                    <div class="row">
                                        {% for media in projects.medias %}
                                            <div class="col-sm-2 col-xs-4">
                                                <a href="#"> <img src="{{ asset(media.assertPath) }}" alt="attachment" class="img-thumbnail img-responsive"> </a>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <!-- end page content -->
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/labsubold/assets/plugins/bootstrap-table/js/bootstrap-table.min.js') }}"></script>
    <script src="{{ asset('bundles/labsubold/assets/pages/jquery.bs-table.js') }}"></script>
{% endblock %}
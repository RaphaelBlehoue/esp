{% extends 'LabsPagesBundle::layout.html.twig' %}
{% block title %} {{ 'FORUM POUR LE FINANCEMENT DU SECTEUR PRIVÃ‰'|capitalize }}{% endblock %}
{% block  body %}
    <div class="page-title causes-title text-center" style="min-height: 250px;">
        <img class="img-responsive slide-img" src="{{ asset('layout_two/img/titles/organisateur.png') }}" alt="">
    </div>

    <section class="mt-100">
        <div class="container">
            {% for organisateur in organisateurs %}
                <div class="row mt-15">
                <div class="col-md-6 col-sm-6">
                    <div class="upcoming-event-s">
                        <a href="{{ path('view_organisateur', {'org' : organisateur.id }) }}"><img class="img-responsive" src="{{ asset(organisateur.assertPath) }}" alt="{{ organisateur.name }}"></a>
                    </div>
                </div>
                <div class="col-md-6 col-sm-6 overcoming">
                    <h4 class="d-black lh-33 h-sep mt-5">
                        <img src="{{ asset('layout_two/img/logo_icon.png') }}" alt="" class="pull-left img-responsive">
                        <span style="padding-left: 5px;">{{ organisateur.name }}</span>
                    </h4>
                        <p class="lh-28 mt-50 fz-15">
                            {{ organisateur.content|raw }}
                        </p>
                </div>
                <div class="pull-right mt-10 mb-10">
                    <a class="btn-prime tri-b text-uppercase" style="line-height: 39px;" href="{{ path('view_organisateur', {'org' : organisateur.id }) }}">{{ 'en savoir plus'|upper }}</a>
                </div>
            </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}
{% block javascripts %}{% endblock %}
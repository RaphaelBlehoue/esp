{% extends '::base.html.twig' %}
{% block title %} {{ 'Actualité'|capitalize }}{% endblock %}
{% block cssClass %}
    single single-post postid-175 single-format-standard with_aside aside_right color-blue layout-full-width header-transparent header-menu-right sticky-header sticky-white subheader-both-center no-content-padding
{% endblock %}
{% block stylesheets %}
    <link rel='stylesheet' href="{{ asset('baseLayout/css/structure.css') }}">
    <link rel='stylesheet' href="{{ asset('baseLayout/css/finances.css') }}">
    <link rel='stylesheet' href="{{ asset('baseLayout/css/custom.css') }}">
{% endblock %}
{% block subHeader %}
    <div id="Subheader">
        <div class="container">
            <div class="column one">
                <h1 class="title">{{ 'Actualités'|upper }}</h1>
            </div>
        </div>
    </div>
{% endblock %}
{% block  body %}
    <div id="Content">
        <div class="content_wrapper clearfix">
            <div class="sections_group">
                <div id="post-175" class="post-175 post  format-standard has-post-thumbnail  category-motion category-photography category-uncategorized tag-eclipse tag-grid tag-mysql no-title">
                    <div class="section section-post-header">
                        <div class="section_wrapper clearfix">
                            <!-- Posts Navigation -->
                            <!-- One full width row-->
                            <div class="column one post-header">
                                <div class="title_wrapper">
                                    <div class="post-meta clearfix">
                                        <h3 class="title">{{ post.title }}</h3>
                                    </div>
                                </div>
                            </div>
                            <!-- Post Featured Element (image / video / gallery)-->
                            <!-- One full width row-->
                            <div class="column one single-photo-wrapper">

                                <div class="image_frame scale-with-grid">
                                    <div class="image_wrapper">
                                        <a href="{{ asset(post.assertPath) }}" rel="prettyphoto">
                                            <div class="mask"></div><img width="1200" height="480" src="{{ post.assertPath|imagine_filter('my_thumb_article_single') }}" class="scale-with-grid wp-post-image" alt="{{ post.title }}" />
                                        </a>
                                        <div class="image_links">
                                            <a href="{{ asset(post.assertPath) }}" class="zoom" rel="prettyphoto"><i class="icon-search"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {% if post.videoLink|length > 0 %}
                            <div class="column one single-photo-wrapper">
                                <div class="image_frame scale-with-grid">
                                    <div class="image_wrapper">
                                        <iframe class="scale-with-grid" src="https://www.youtube.com/embed/{{ post.videoLink }}" allowFullScreen></iframe>
                                    </div>
                                </div>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                    <!-- Post Content-->
                    <div class="post-wrapper-content">
                        <div class="entry-content">
                            <div class="section flv_sections_11">
                                <div class="section_wrapper clearfix">
                                    <div class="items_group clearfix">
                                        <!-- One full width row-->
                                        <div class="column one column_column">
                                            <div class="column_attr ">
                                                <p class="flv_style_4">
                                                    {{ post.content|raw }}
                                                </p>
                                            </div>
                                        </div>
                                        <!-- One Third (1/3) Column -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Sidebar area-->
            <div class="sidebar sidebar-1 four columns">
                <div class="widget-area clearfix ">
                    <!-- Search form-->
                    <aside class="widget widget_search">
                        <h3>{{ 'La finance s\'engage'|upper }}</h3>
                    </aside>
                    <!-- Text Area -->
                    <aside class="widget widget_text">
                        <h3>{{ 'Qui sommes nous' }}</h3>
                        <div class="textwidget">
                            La Finance S’Engage, est né d’un projet concu par le Cabinet ESPartners et porté par le Patronat ivoirien et plus particulièrement avec la création de la Commission de Financement du Secteur Privé de la CGECI en partenariat avec la Banque Africaine de Développement dans le but de mobiliser le secteur privé pour offrir des solutions concrètes au financement de l’économie ivoirienne
                        </div>
                    </aside>
                    <!-- Recent posts -->
                    <aside class="widget widget_mfn_recent_posts">
                        <h3>{{ 'Documents à télécharger' }}</h3>
                        <div class="Recent_posts">
                            <div class="column one column_icon_box">
                                {% if post.documentName|length > 0 %}
                                    <div class="icon_box icon_position_top no_border">
                                        <a  href="{{ path('document_download', {'filename' : post.documentName }) }}">
                                            <div class="icon_wrapper">
                                                <div class="icon">
                                                    <i class="icon-docs"></i>
                                                </div>
                                            </div>
                                            <div class="desc_wrapper">
                                                <h4>{{ post.docsName }}</h4>
                                            </div>
                                        </a>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </aside>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}{% endblock %}
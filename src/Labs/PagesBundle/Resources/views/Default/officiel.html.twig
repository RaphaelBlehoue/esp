{% extends 'LabsPagesBundle::layout.html.twig' %}
{% block title %} {{ 'speakers'|capitalize }}{% endblock %}
{% block  body %}
    <div class="page-title causes-title text-center" style="min-height: 250px;">
        <img class="img-responsive slide-img" src="{{ asset('layout_two/img/titles/officiel.png') }}" alt="">
    </div>
    <!-- participants -->
    <section class="recent-causes no-margin">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <h3 class="text-uppercase black h-sep"><span class="text-ultra-bold">{{ 'Officiels'|upper }}</span> </h3>
                </div>
            </div>
            <div class="row mt-50">
                    {% for officiel in office %}
                        {% if officiel.types == 1 %}
                            <div class="col-md-4 mt-50 cause-main">
                                <div class="item">
                                    <div class="causes-img text-center">
                                        <a href="{{ path('viewofficiel', {'team' : officiel.id  }) }}">
                                            <img src="{{ asset(officiel.assertPath|imagine_filter('my_thumb_of')) }}" alt="{{ officiel.name }}" class="img-responsive">
                                        </a>
                                    </div>
                                    <div class="cause-content text-center">
                                        <h5 class="martel text-semi-bold d-black mt-30">{{ officiel.name }}</h5>
                                        <p class="lh-22 mt-10">{{ officiel.poste|truncate(50, true, '...') }}</p>
                                        <a class="fz-14 mt-20 btn-green-br" href="#">{{ 'En savoir +' }}</a>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
    </section>
    <!-- end participants -->
{% endblock %}
{% block javascripts %}{% endblock %}